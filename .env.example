# Environment Configuration Template
# Copy this file to .env and fill in the values

# Application Versions
FRONTEND_VERSION=latest
BACKEND_VERSION=latest

# Network Configuration
FRONTEND_PORT=3000
BACKEND_PORT=8000
FRONTEND_DOMAIN=localhost
BACKEND_DOMAIN=api.localhost

# Database Configuration
POSTGRES_USER=tutorial_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=tutorial_db

# Redis Configuration (optional password)
# REDIS_PASSWORD=your_redis_password_here

# Application Secrets
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
OPENAI_API_KEY=your_openai_api_key_here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Logging
LOG_LEVEL=INFO
TRAEFIK_LOG_LEVEL=ERROR

# SSL/TLS Configuration (for production)
ACME_EMAIL=admin@yourdomain.com

# Monitoring (optional)
GRAFANA_PASSWORD=your_grafana_password_here

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_TELEMETRY_DISABLED=1

# Development specific
NODE_ENV=production
ENVIRONMENT=production

# Security Headers (optional)
SECURE_HEADERS=true
HSTS_MAX_AGE=31536000

# Rate Limiting (optional)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# File Upload Limits (optional)
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=.py,.js,.ts,.jsx,.tsx,.json,.md,.txt

# Session Configuration
SESSION_TIMEOUT=3600  # 1 hour in seconds
REFRESH_TOKEN_EXPIRE_DAYS=30

# Email Configuration (if needed)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# FROM_EMAIL=noreply@yourdomain.com

# AWS Configuration (if deploying to AWS)
# AWS_REGION=us-west-2
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# S3_BUCKET_NAME=your_bucket_name

# Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30

# Monitoring URLs (optional)
# SENTRY_DSN=your_sentry_dsn_here
# DATADOG_API_KEY=your_datadog_api_key

# Feature Flags (optional)
# FEATURE_AI_ANALYSIS=true
# FEATURE_GITHUB_INTEGRATION=true
# FEATURE_REAL_TIME_COLLABORATION=false